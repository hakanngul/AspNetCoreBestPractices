@model ProductDto

@{
    ViewBag.Title = "Ürün Güncelle";
    Layout = "_Layout";
}
<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-controller="Products">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Ürün Adı</label>
                <input class="form-control" asp-for="Name" placeholder="Ürün Adı"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock">Stok Adet</label>
                <input class="form-control" asp-for="Stock" placeholder="Stok Adet"/>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Fiyat</label>
                <input class="form-control" asp-for="Price" placeholder="Fiyat"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">CategoryId</label>
                <input class="form-control" asp-for="CategoryId" placeholder="CategoryId"/>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>